generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "sqlite"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Rental {
  id          BigInt       @id @default(autoincrement())
  rentalItems RentalItem[]
  customer    Customer     @relation(fields: [customerId], references: [id])
  customerId  BigInt
  date        DateTime     @default(now())

  @@index([customerId])
  @@map("rentals")
}

model Customer {
  id          BigInt        @id @default(autoincrement())
  name        String
  email       String        @unique
  phone       String        @unique
  password    String
  rentals     Rental[]
  consoleUses ConsoleUses[]

  @@map("customers")
}

model Game {
  id            BigInt         @id @default(autoincrement())
  name          String
  platforms     Platform[]
  GamePlatform GamePlatform[]

  @@map("games")
}

model ConsoleUses {
  id         BigInt    @id @default(autoincrement())
  Customer   Customer? @relation(fields: [customerId], references: [id])
  customerId BigInt?

  @@index([customerId])
  @@map("console-uses")
}

model Console {
  id           BigInt              @id @default(autoincrement())
  name         String
  pricePerHour Decimal
  acessories   ConsoleAcessories[]

  @@map("consoles")
}

model Platform {
  id           BigInt         @id @default(autoincrement())
  name         String         @unique
  games        Game[]
  gamePlatform GamePlatform[]

  @@map("platforms")
}

model GamePlatform {
  game       Game     @relation(fields: [gameId], references: [id])
  platform   Platform @relation(fields: [platformId], references: [id])
  dailyPrice Decimal

  gameId     BigInt
  platformId BigInt
  rentalItem RentalItem[]

  @@id([gameId, platformId])
  @@index([gameId])
  @@index([platformId])
  @@map("game-platforms")
}

model RentalItem {
  gamePlatform     GamePlatform @relation(fields: [gameId, platformId], references: [gameId, platformId])
  gameId   BigInt
  platformId BigInt
  rental   Rental       @relation(fields: [rentalId], references: [id])
  rentalId BigInt
  days     Int
  quantity Int

  @@id([gameId, platformId, rentalId])
  @@index([gameId])
  @@index([platformId])
  @@index([rentalId])
  @@map("rental-items")
}

model ConsoleAcessories {
  id        BigInt  @id @default(autoincrement())
  name      String
  Console   Console @relation(fields: [consoleId], references: [id])
  consoleId BigInt

  @@index([consoleId])
  @@map("console-acessories")
}
